<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ConstraintLayout para definir la apariencia similar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ListView con restricciones similares al ConstraintLayout -->

        <!-- BotÃ³n con restricciones similares al ConstraintLayout -->
        <ListView
            android:id="@+id/listaMovimientos"
            android:layout_width="409dp"
            android:layout_height="660dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/botonIngresar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/botonIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listaMovimientos" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
